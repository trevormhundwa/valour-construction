---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About Us' },
  { href: '/services', label: 'Services' },
  { href: '/projects', label: 'Projects' },
  { href: '/contact', label: 'Contact' },
];

const services = [
  { href: '/services#commercial', label: 'Commercial Construction' },
  { href: '/services#residential', label: 'Residential Construction' },
  { href: '/services#renovation', label: 'Renovations & Remodeling' },
];
---

<footer class="footer">
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- Company Info -->
        <div class="footer-col footer-about">
          <img src="/images/logo.png" alt="Valour Construction" class="footer-logo" width="150" height="40">
          <p class="footer-tagline">Building Excellence Since 2012</p>
          <p class="footer-description">
            Quality construction delivered with precision and integrity in Zimbabwe.
          </p>
          <div class="social-links">
            <a href="#" class="social-link" aria-label="Facebook">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
            <a href="#" class="social-link" aria-label="LinkedIn">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                <rect x="2" y="9" width="4" height="12"/>
                <circle cx="4" cy="4" r="2"/>
              </svg>
            </a>
            <a href="#" class="social-link" aria-label="Twitter">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="footer-col">
          <h3 class="footer-heading">Quick Links</h3>
          <ul class="footer-links">
            {quickLinks.map((link) => (
              <li>
                <a href={link.href} class="footer-link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Services -->
        <div class="footer-col">
          <h3 class="footer-heading">Services</h3>
          <ul class="footer-links">
            {services.map((link) => (
              <li>
                <a href={link.href} class="footer-link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Contact -->
        <div class="footer-col">
          <h3 class="footer-heading">Contact Us</h3>
          <address class="footer-contact">
            <p>348 Samora Machel, Eastlea</p>
            <p>Harare, Zimbabwe</p>
            <p class="mt-4">
              <a href="tel:+263772375465" class="footer-link">+263 772 375 465</a>
            </p>
            <p>
              <a href="tel:+263772853215" class="footer-link">+263 772 853 215</a>
            </p>
            <p class="mt-4">
              <span id="email-display" class="footer-link"></span>
            </p>
          </address>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-inner">
        <p>&copy; {currentYear} Valour Construction. All rights reserved.</p>
        <div class="footer-bottom-links">
          <a href="/privacy" class="footer-bottom-link">Privacy Policy</a>
          <a href="/terms" class="footer-bottom-link">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-navy);
    color: var(--color-white);
  }

  .footer-main {
    padding: var(--space-9) 0;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--space-7);
  }

  .footer-about {
    padding-right: var(--space-6);
  }

  .footer-logo {
    height: 40px;
    width: auto;
    margin-bottom: var(--space-4);
    filter: brightness(0) invert(1);
  }

  .footer-tagline {
    color: var(--color-orange);
    font-family: var(--font-heading);
    font-weight: 600;
    margin-bottom: var(--space-3);
  }

  .footer-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-sm);
    line-height: 1.6;
    margin-bottom: var(--space-5);
  }

  .social-links {
    display: flex;
    gap: var(--space-3);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
    transition: all var(--transition-base);
  }

  .social-link:hover {
    background: var(--color-orange);
    color: var(--color-white);
  }

  .footer-heading {
    color: var(--color-orange);
    font-family: var(--font-heading);
    font-size: var(--font-size-base);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-sm);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .footer-link:hover {
    color: var(--color-white);
  }

  .footer-contact {
    font-style: normal;
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-sm);
    line-height: 1.8;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--space-5) 0;
  }

  .footer-bottom-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.7);
  }

  .footer-bottom-links {
    display: flex;
    gap: var(--space-5);
  }

  .footer-bottom-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .footer-bottom-link:hover {
    color: var(--color-white);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer-about {
      grid-column: 1 / -1;
      padding-right: 0;
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }

    .footer-bottom-inner {
      flex-direction: column;
      gap: var(--space-3);
    }
  }
</style>

<script>
  // Email obfuscation for spam protection
  const emailParts = ['info', 'valourconstruction.co.zw'];
  const emailDisplay = document.getElementById('email-display');
  if (emailDisplay) {
    const email = emailParts.join('@');
    emailDisplay.innerHTML = `<a href="mailto:${email}" class="footer-link">${email}</a>`;
  }
</script>
