---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  link?: {
    href: string;
    label: string;
  };
}

const { title, subtitle, centered = false, link } = Astro.props;
---

<div class:list={['section-header', { centered, 'with-link': !!link }]}>
  <div class="section-header-text">
    <h2 class="section-title">{title}</h2>
    {subtitle && <p class="section-subtitle">{subtitle}</p>}
  </div>
  {link && (
    <a href={link.href} class="text-link">{link.label}</a>
  )}
</div>

<style>
  .section-header {
    margin-bottom: var(--space-7);
  }

  .section-header.with-link {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: var(--space-4);
  }

  .section-header.centered {
    text-align: center;
  }

  .section-header.centered .section-header-text {
    max-width: 600px;
    margin: 0 auto;
  }

  .section-title {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-3);
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-gray);
    max-width: 600px;
  }

  .section-header.centered .section-subtitle {
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: var(--font-size-3xl);
    }

    .section-header.with-link {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
